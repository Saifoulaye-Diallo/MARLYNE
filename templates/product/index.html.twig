{% extends 'base.html.twig' %}

{% block title %}Nos produit{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-3">
            <h1>Filtrer</h1>
            {{form(form)}}
        </div>
        <div class="col-md-9">
            <h1>Nos Produits</h1> </br>
                <div class="row">
                     {% for product in products %}
                         <div class="col-md-4">
                            <div class="product-item text-center" >
                                <a href="{{ path('product', {'slog': product.slog})}}">
                                    <img src="/uploads/{{product.ilustration}}" alt="{{product.name}}" class="img-fluid" width="100%" heigth="10%" >
                                </a>
                                <h5>{{product.name}}</h5>
                                <span class="product-tittle">{{product.tittle}}</span>
                                <span class="product-price">{{ (product.price /100 ) | number_format(2 ,',', '.') }}$</span>
                            </div>       
                        </div> 
                    {% endfor %}
    </div>
{% endblock %}
