{% extends 'base.html.twig' %}

{% block title %}{{product.name}}{% endblock %}

{% block content %}
<div class="row">
    <div class="col-md-5">
        <img src="/uploads/{{product.ilustration}}" alt="{{product.name}}" class="img-fluid" width="100%" heigth="10%" >    
    </div>       
     <div class="col-md-7 my-auto">
        <h5>{{product.name}}</h5>
        <p>{{product.tittle}}</p>
            <span class="product-page-price">{{ (product.price /100 ) | number_format(2 ,',', '.') }}$</span>
        <hr>
        <p>
            {{product.description}}
        </p>
        <hr>
        <a href="{{ path('add-to-cart', {'id': product.id})}}" class="btn btn-primary">Ajouter au panier</a>
        </div>       
    </div> 
</div>
{% endblock %}
